#!/bin/sh

# Pre-commit hook to run validation checks
echo "🔍 Running pre-commit checks..."

# Check for circular dependencies
echo "🔄 Checking for circular dependencies..."
pnpm check:circular
if [ $? -ne 0 ]; then
  echo "❌ Circular dependencies detected! Please fix them before committing."
  exit 1
fi

# Run tests if they exist and pass quickly
echo "🧪 Running tests..."
result=$(pnpm test 2>/dev/null || true)

if [ -n "$result" ]; then
  echo "⚠️  Tests may have failed. Consider fixing tests."
fi

echo "✅ Pre-commit checks passed!"
