#!/bin/sh

# Pre-commit hook to run validation checks
echo "ğŸ” Running pre-commit checks..."

# Check for circular dependencies
echo "ğŸ”„ Checking for circular dependencies..."
pnpm check:circular
if [ $? -ne 0 ]; then
  echo "âŒ Circular dependencies detected! Please fix them before committing."
  exit 1
fi

# Run tests if they exist and pass quickly
echo "ğŸ§ª Running tests..."
result=$(pnpm test 2>/dev/null || true)

if [ -n "$result" ]; then
  echo "âš ï¸  Tests may have failed. Consider fixing tests."
fi

echo "âœ… Pre-commit checks passed!"
